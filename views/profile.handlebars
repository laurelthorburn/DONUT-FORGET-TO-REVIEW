

  <div class="jumbotron">
      <div class="container">
          <h2 style="background-color: #ffffff"> Welcome to your profile, {{username}}!</h2> 
          
          <p></p>
          
      </div>
  </div>



<section>
  
<div class="container-fluid p-3">  
  <div class="row mx-auto mt-3">
    <div class="col-xs-12">

        {{#each post.comments as |post|}}
        <div class="card" style="width: 18rem;">
          <img src="..." class="card-img-top smaller-img" alt="...">
          <div class="card-body">
          <h5 class="card-title">{{post.post_title}}</h5>
          <p class="card-text">
          Author: {{ post.user.username}} Date: {{format_date post.createdAt}}<br>
          {{post.post_content}} </p>
        </div>
         <ul class="list-group list-group-flush">
         <li class="list-group-item">Overall Score: </li>
         <li class="list-group-item">Rating: </li>
         <li class="list-group-item">Location: </li>
         </ul>
        <div class="card-body">
        <a href="/{{id}}" class="button-1 btn-link" role="button">View Discussion</a>
        </div> 

        {{/each}} 
    </div>

  </div>
</div>

</section>   


<div class="container-fluid">

  <div class="row mx-auto mt-3">
  <div class="col-xs-12 card">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">post name:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      
      <div class="form-group">
        <label for="post-desc">description:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>

      <a id="hosted-link" target="_blank"></a>
  <form>
    <div class="form-group">
      <input type="file" name="my-file">
      <input type="text" name="my-description" placeholder="file description">

      <input type="submit" value="Upload" disabled>
    </div>

    {{!-- img tag for displaying file to upload --}}
    <img id='img-preview'>
  </form>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>






  
</div>



  {{#if posts.length}}
  <div class="col-md-5 ml-5 post-list card">
    <h3>Current posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/{{post.id}}">{{post.post_title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-success" data-update={{post.id}} data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo" id="first-update">UPDATE</button>
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

{{!-- MODAL BELOW --}}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update your post</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Title:</label>
            <input type="text" class="form-control" id="recipient-name">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Content:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Regret update</button>
        <button type="button" class="btn btn-primary" id="update-button" data-put="">Confirm update</button>
      </div>
    </div>
  </div>
</div> 

<script src="./js/post.js"></script>
