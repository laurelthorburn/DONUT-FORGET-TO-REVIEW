
<div class="menu-container">
  <div class="container">
    <div class="card-columns post-list">

      {{#each posts as |post|}}

      <div class="card straight-corner m-2 p-2 border-secondary" style="width: 18rem;">
        <center>
          <img src="{{post.post_img}}" class="card-img-top smaller-img" alt="{{post.post_title}}">
          <div class="card-body m-0 p-0">
            <hr>
            <h5 class="card-title title-font">{{loud post.post_title}}</h5>
            <p class="card-text post-main-font">Author: {{ ../username}}</p>
            {{#donutTimes post_rating}}
            <span>üç©</span>
            {{/donutTimes}}
            <p class="post-main-font">Rating: {{post.post_rating}}/5</p>
            <hr>
          </div>
        </center>
        <div class="card-body p-0 m-0">

          <a href="/{{id}}"><button class="button-57 btn-block" role="button"><span class="text">Read
                More...</span><span>donut miss out</span></button></a>

          {{!--Update existing posts --}}

          <button class="button-57 btn-block" data-update={{post.id}} data-toggle="modal" data-target="#exampleModal"
            data-whatever="@mdo" id="first-update" role="button"><span class="text" data-button-type="update">Update
              Post</span><span>update your donut</span></button>

          {{!--Delete existing posts --}}
          <button class="button-57 btn-block delete-btn" data-id={{post.id}} role="button" data-button-type="delete"><span class="text">Delete
              Post</span><span>delete your donut</span></button>

  </div>
</div>
    {{/each}}

  </div>
</div>
</div>


